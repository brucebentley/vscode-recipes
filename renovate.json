
{
  "timezone": "America/New_York",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    "group:all",
    "schedule:monthly",
    ":maintainLockFilesMonthly"
  ],
  "rangeStrategy": "replace",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": "group:all"
  },
  "packageRules": [
    {
      "automerge": true,
      "depTypeList": [ "devDependencies" ],
      "rangeStrategy": "bump",
      "updateTypes": [ "minor", "patch", "pin", "digest" ]
    }
  ],
  "commitMessageAction": "Update"
}
